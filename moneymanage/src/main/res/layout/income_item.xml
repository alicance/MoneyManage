<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/adapter_height"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginStart="@dimen/margin_ten"
        android:layout_marginEnd="@dimen/margin_ten">
        <View
            android:id="@+id/income_item_adapter_icon"
            android:layout_width="@dimen/icon_item_length"
            android:layout_height="@dimen/icon_item_length"
            android:layout_gravity="center_vertical"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/income_item_adapter_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/margin_ten"
            android:paddingEnd="@dimen/margin_ten"
            android:text="薪水"/>

        <TextView
            android:id="@+id/income_item_adapter_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/margin_ten"
            android:paddingEnd="@dimen/margin_ten"
            android:text="￥ 8000" />

        <TextView
            android:id="@+id/income_item_adapter_datetime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical|end"
            android:text="2016-11-12"/>

    </LinearLayout>
</LinearLayout>
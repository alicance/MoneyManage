<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/adapter_height"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical">
        <View
            android:id="@+id/note_list_icon"
            android:layout_width="@dimen/icon_item_length"
            android:layout_height="@dimen/icon_item_length"
            android:background="@color/colorPrimary"/>
        <TextView
            android:id="@+id/note_list_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/five_dp"
            android:layout_marginEnd="@dimen/five_dp"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/note_list_datetime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"/>
    </LinearLayout>
</LinearLayout>
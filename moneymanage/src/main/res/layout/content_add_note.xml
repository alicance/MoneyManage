<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/add_note_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="@dimen/margin_ten"
            android:paddingEnd="@dimen/margin_ten"
            android:background="@drawable/login_et_bg"
            android:hint="@string/note_hint_title"
            android:textSize="14sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divide_height"
            android:background="@color/divide_line"/>

        <EditText
            android:id="@+id/add_note_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/margin_ten"
            android:paddingEnd="@dimen/margin_ten"
            android:paddingTop="@dimen/margin_ten"
            android:background="@drawable/login_et_bg"
            android:hint="@string/note_hint_content"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:minLines="20"
            android:gravity="start|top"
            android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>